<hibernate-configuration xmlns="http://www.hibernate.org/xsd/orm/cfg">
    <session-factory>

        <property name="hibernate.connection.driver.class">com.mysql.jdbc.Driver</property>
        <property name="hibernate.connection.url">jdbc:mysql://127.0.0.1:3306/ligas_futbol_gestor</property>
        <property name="hibernate.connection.user">root</property>
        <property name="hibernate.connection.password"></property>
        <property name="hibernate.dialec">org.hibernate.dialect.MySQLDialect</property>
        <property name="hibernate.hbm2ddl_auto">update</property>

        <mapping class="org.example.model.Liga"/>
        <mapping class="org.example.model.Jugador"/>
        <mapping class="org.example.model.Entrenador"/>
        <mapping class="org.example.model.Equipo"/>

    </session-factory>
</hibernate-configuration>